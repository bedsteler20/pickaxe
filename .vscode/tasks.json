{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync requirments",
      "command": "python",
      "args": [
        "${workspaceFolder}/tools/flatpak-pip-generator.py",
        "--requirements-file=${workspaceFolder}/requirements.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build-aux/dependencies/"
      }
    },
    {
      "label": "Generate Types",
      "command": "flatpak",
      "args": [
        "build",
        "--env=FAKEGIR_PATH=${workspaceFolder}/.flatpak/python-types",
        "--env=ADD_DOCSTRINGS=1",
        "--env=GTK_VERSION=4",
        "${workspaceFolder}/.flatpak/repo",
        "python",
        "${workspaceFolder}/tools/fakegir.py"
      ],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
